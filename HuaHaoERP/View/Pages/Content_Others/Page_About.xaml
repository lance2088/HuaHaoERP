    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="289*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Source="/HuaHaoERP;component/View/Resources/Images/stoneantLogo.png" Grid.Row="1" Height="178" Width="188"/>
        <Label Content="金字塔企业管理软件" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="36" Grid.Column="1" Grid.Row="1" Height="56"/>
