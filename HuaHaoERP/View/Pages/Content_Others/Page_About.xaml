        <Label Content="企业QQ：2095250852" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" Grid.Column="1" FontSize="16" Grid.Row="1" Height="30"/>
        <Label Content="Copyright © 2014 StoneAnt. All Rights Reserved" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top" Grid.Column="1" FontSize="16" Grid.Row="1" Height="30"/>
        <Button FocusVisualStyle="{x:Null}" x:Name="Button_ImportLicense" Content="导入许可" Grid.Column="1" HorizontalAlignment="Left" Margin="310,0,0,45" Grid.Row="1" VerticalAlignment="Bottom" Width="80" Template="{DynamicResource ButtonControlTemplate_CommonBlue}" Foreground="White" Height="30" FontSize="14" Click="Button_ImportLicense_Click"/>
        <Label x:Name="Label_Authorize" Content="授权给：" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,80" Grid.Row="1" VerticalAlignment="Bottom" FontSize="16"/>

    </Grid>
